<h1>My Photos</h1>

<% Photo.all.each do |photo| %>
  <% if photo.user_id == @user.id %>
  <div data-toggle='modal' data-target='#myModal'>
    <%= image_tag(photo.image.url(:thumb)) %>
  </div>
  <% end %>
<% end %>

<button><%= render '/layouts/photo_modal' %></button>



<p><%= link_to "Add a new photo", new_user_photo_path(current_user) %>

